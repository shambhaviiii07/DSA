def rightSideView(self, root: Optional[TreeNode]) -> List[int]:
        right_view=[]
        if root is None:
            return right_view
        queue=deque()
        queue.append(root)
        bfs=deque()
        while queue:
            level_size=len(queue)
            curr_lvl=deque()
            for i in range(level_size):
                t=queue.popleft()
                curr_lvl.append(t.val)
                if t.left:
                    queue.append(t.left)
                if t.right:
                    queue.append(t.right)
            bfs.append(curr_lvl)
        for i in range(len(bfs)):
            t=len(bfs[i])
            right_view.append(bfs[i][t-1])
        return right_view
